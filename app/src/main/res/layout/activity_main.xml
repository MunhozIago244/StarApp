<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Cartão para destacar o contador -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContador"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/botaoAdicionar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/textoResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="80sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Botão de Adicionar com estilo moderno -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/botaoAdicionar"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:text="Adicionar (+1)"
        android:textSize="18sp"
        app:backgroundTint="@color/add_button"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toTopOf="@+id/botaoSubtrair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardContador" />

    <!-- Botão de Subtrair com estilo moderno -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/botaoSubtrair"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Subtrair (-1)"
        android:textSize="18sp"
        app:backgroundTint="@color/sub_button"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoAdicionar" />

</androidx.constraintlayout.widget.ConstraintLayout>